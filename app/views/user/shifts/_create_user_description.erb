<h2>Observação</h2>

<%= simple_form_for(@shift, url: url, method: method ) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div>
    <br/><%= f.text_area :description, cols: 60, rows: 5 %>
  </div>

  <div>
    <br/><%= f.submit "Salvar", class: "btn btn-success" %>
    <%= link_to "Voltar", user_user_shifts_path(@shift), method: :get, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
